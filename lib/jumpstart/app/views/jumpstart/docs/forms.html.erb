      <div>
        <label for="radio-label-first-2">Label text</label>
        <p class="form-hint">Hint text</p>
      </div>
      <input name="radio-label-first" type="radio" id="radio-label-first-2">
    </div>
  </fieldset>
</form>
<% end %>

