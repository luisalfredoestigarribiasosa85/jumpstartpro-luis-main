    <legend class="text-sm font-bold">With Hint Text</legend>

    <div class="form-picker-group">
      <input name="radio" type="radio" id="checked-radio">
      <div>
        <label for="checked-radio">Label text</label>
        <p class="form-hint">Hint text</p>
